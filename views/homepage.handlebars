{{!-- hero --}}
<section class="hero has-background">
  {{!-- tried putting as hero background
  {{#each movies as |movie|}}
  <img class="hero-background background is-transparent" src="https://image.tmdb.org/t/p/w500/{{poster_path}}">
  {{/each}} --}}

  <div class="hero-body">
     {{!-- Slider main container  --}}
    <div class="swiper">
       {{!-- Additional required wrapper  --}}
      <div class="swiper-wrapper">
        {{!-- Slides  --}}
        {{#each movies as |movie|}}
        <div class="swiper-slide has-text-centered has-background">
          {{!-- backgorund img --}}
          <img class="swiper-background background is-transparent" src="https://image.tmdb.org/t/p/w500/{{poster_path}}">
          {{!-- movie img --}}
          <img src="https://image.tmdb.org/t/p/w500/{{poster_path}}">
        </div>
        {{/each}}
      </div>
       {{!-- If we need pagination  --}}
      <div class="swiper-pagination"></div>

       {{!-- If we need navigation buttons  --}}
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>

      {{!--  If we need scrollbar  --}}
      <div class="swiper-scrollbar"></div>
    </div>
  </div>
</section>
